@tailwind base;
@tailwind components;
@tailwind utilities;

/* Design system Tennis Breakdown - Noir/Orange */
:root {
  --orange-500: #f97316;
  --orange-600: #ea580c;
  --orange-700: #c2410c;
  --black: #0a0a0a;
  --gray-900: #171717;
  --gray-800: #262626;
  --gray-700: #404040;
  --gray-600: #525252;
  --gray-100: #f5f5f5;
  --white: #ffffff;
}

body {
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background-color: var(--black);
  color: var(--white);
}

/* Typography */
h1, h2, h3, h4, h5, h6 {
  color: var(--white);
}

p, span, div {
  color: var(--gray-100);
}

/* Links */
a {
  color: var(--orange-500);
}
a:hover {
  color: var(--orange-600);
}

/* Form inputs */
input, textarea, select {
  background-color: var(--gray-800);
  color: var(--white);
  border-color: var(--gray-700);
}
input:focus, textarea:focus, select:focus {
  border-color: var(--orange-500);
  ring-color: var(--orange-500);
}

/* Buttons primary */
.btn-primary {
  background-color: var(--orange-500);
  color: var(--white);
}
.btn-primary:hover {
  background-color: var(--orange-600);
}

/* Cards/Containers */
.card {
  background-color: var(--gray-900);
  border: 1px solid var(--gray-800);
  color: var(--white);
}
